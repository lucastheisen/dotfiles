alias grep='grep --color' 
alias scpresume='rsync --partial --progress -r --rsh="ssh"'
alias vi='vim'

eStyle='$'
if [[ $(id -u) -eq 0 ]]; then
  eStyle='\[\e[0;31m\]#\[\e[0m\]';
fi
PS1='\[\e]0;\w\a\]\n\[\e[32m\]\u@\h \[\e[33m\]\w\[\e[0m\]\n'"$eStyle "
unset eStyle

EDITOR=vim
TERM=xterm-256color
export EDITOR TERM

set -o vi
